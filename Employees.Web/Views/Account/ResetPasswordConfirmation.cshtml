@{
    ViewData["Title"] = "Reset Password";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
        <h1 class="display-4 text-danger">Confirmation Password</h1>
        <p class="lead">
            Congrats ! Your password is reset
        </p>
        <hr class="my-4">
        <p class="text-muted">Please click below button to login</p>
        <a href="@Url.Action("login", "account")" class="btn btn-primary btn-lg mt-3">Login</a>
    </div>
</div>

<style>
    .vh-100 {
        min-height: 100vh;
    }

    .text-danger {
        color: #e3342f;
    }

    .btn-primary {
        background-color: #3490dc;
        border-color: #3490dc;
    }

        .btn-primary:hover {
            background-color: #2779bd;
            border-color: #2779bd;
        }
</style>


